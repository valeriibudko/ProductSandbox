{
  "name": "vbudko/abstract-factory-demo",
  "description": "Production-ready example of the Abstract Factory design pattern in PHP with tests.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "psr/log": "^3.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.0",
    "guzzlehttp/guzzle": "^7.9",
    "http-interop/http-factory-guzzle": "^1.2",
    "monolog/monolog": "^3.6",
    "psr/http-client": "^1.0.1",
    "php-http/guzzle7-adapter": "^1.0"
  },
  "autoload": {
    "psr-4": { "App\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests --colors=always --testdox"
  },
  "authors": [
    {
      "name": "Valerii",
      "email": "valerii.web.dev@gmail.com"
    }
    ]
}
